<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= game.title %> - RetroWorld</title>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            overflow: hidden;
            height: 100vh;
        }

        .game-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            height: 100vh;
            position: relative;
            z-index: 1;
            box-sizing: border-box;
            gap: 1rem;
        }
        
        .game-wrapper {
            position: relative;
            width: 95%;
            height: 65vh;
            margin: 0 auto;
            background-color: #000;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
            overflow: hidden;
            resize: both;
            min-width: 1000px;
            min-height: 400px;
            max-width: 98vw;
            max-height: 75vh;
            box-sizing: border-box;
            aspect-ratio: 21/9;
        }
        
        .game-frame {
            width: 100%;
            height: 100%;
            border: none;
            background-color: #000;
        }
        
        .resize-handle {
            position: absolute;
            width: 20px;
            height: 20px;
            bottom: 0;
            right: 0;
            background: linear-gradient(135deg, transparent 50%, #2c3e50 50%);
            cursor: nwse-resize;
            z-index: 2;
        }
        
        .game-title {
            color: #fff;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            margin: 0;
            font-size: 1.2rem;
            text-align: center;
        }
        
        .back-button {
            display: inline-block;
            margin: 0;
            padding: 0.5rem 1rem;
            background-color: #2c3e50;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s;
            font-size: 0.8rem;
        }
        
        .back-button:hover {
            background-color: #34495e;
        }

        header {
            padding: 0.5rem;
            position: absolute;
            top: 0;
            width: 100%;
        }

        nav {
            display: flex;
            justify-content: center;
            gap: 1rem;
        }

        nav a {
            padding: 0.3rem 0.6rem;
            font-size: 0.8rem;
        }

        footer {
            padding: 0.3rem;
            font-size: 0.7rem;
            position: absolute;
            bottom: 0;
            width: 100%;
        }

        @media (max-width: 768px) {
            .game-wrapper {
                width: 98%;
                height: 55vh;
                min-width: unset;
                min-height: unset;
                aspect-ratio: 21/9;
            }
        }
    </style>
</head>
<body>
    <video class="video-background" autoplay muted loop>
        <source src="/media/background.mp4" type="video/mp4">
    </video>
    <div class="overlay"></div>

    <audio id="bgMusic" class="audio-player" loop>
        <source src="/media/game.mp3" type="audio/mpeg">
    </audio>

    <header>
        <nav>
            <a href="/">Home</a>
            <a href="/about">About Us</a>
        </nav>
    </header>

    <main class="game-container">
        <h1 class="game-title"><%= game.title %></h1>
        <div class="game-wrapper">
            <iframe 
                class="game-frame"
                src="/game-content/<%= game.id %>"
                title="<%= game.title %>"
                allow="fullscreen"
                sandbox="allow-scripts allow-same-origin"
            ></iframe>
            <div class="resize-handle"></div>
        </div>
        <a href="/" class="back-button">Back to Home</a>
    </main>

    <footer>
        <p>&copy; 2024 RetroWorld. All rights reserved.</p>
    </footer>

    <script>
        window.addEventListener('load', function() {
            const audio = document.getElementById('bgMusic');
            audio.volume = 0.2;
            
            // Play audio immediately
            audio.play().catch(() => {
                // If autoplay fails, try on first user interaction
                document.addEventListener('click', () => {
                    audio.play();
                }, { once: true });
            });

            // Add resize handle functionality
            const gameWrapper = document.querySelector('.game-wrapper');
            const resizeHandle = document.querySelector('.resize-handle');
            
            let isResizing = false;
            let startX, startY, startWidth, startHeight;

            resizeHandle.addEventListener('mousedown', initResize);

            function initResize(e) {
                isResizing = true;
                startX = e.clientX;
                startY = e.clientY;
                startWidth = parseInt(document.defaultView.getComputedStyle(gameWrapper).width, 10);
                startHeight = parseInt(document.defaultView.getComputedStyle(gameWrapper).height, 10);
                
                document.addEventListener('mousemove', resize);
                document.addEventListener('mouseup', stopResize);
            }

            function resize(e) {
                if (!isResizing) return;
                
                const width = startWidth + (e.clientX - startX);
                const height = startHeight + (e.clientY - startY);
                
                // Apply minimum and maximum constraints
                gameWrapper.style.width = Math.min(Math.max(width, 1000), window.innerWidth * 0.98) + 'px';
                gameWrapper.style.height = Math.min(Math.max(height, 400), window.innerHeight * 0.9) + 'px';
            }

            function stopResize() {
                isResizing = false;
                document.removeEventListener('mousemove', resize);
                document.removeEventListener('mouseup', stopResize);
            }
        });
    </script>
</body>
</html> 